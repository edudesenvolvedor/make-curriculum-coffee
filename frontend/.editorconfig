# EditorConfig (https://editorconfig.org)
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.{js,jsx,ts,tsx}]
max_line_length = 100  # Opcional: alinhado ao Prettier